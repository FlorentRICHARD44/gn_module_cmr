{
    "label": "Point de Capture",
    "label_plural": "Points de Capture",
    "geometry_types": ["Point"],
    "check_site_within_sitegroup": true,
    "display_properties": ["name", "habitat","conductivité","piege_type","date_pose","date_retrait","comments","nb_visits"],
    "display_list": [{
        "field":"name",
        "width": 150
    },{
        "field":"piege_type",
        "width": 250
    },{
        "field":"nb_visits",
        "width": 120,
        "align": "right"
    },{
        "field":"nb_observations",
        "width": 120,
        "align": "right"
    },{
        "field":"nb_individuals",
        "width": 120,
        "align": "right"
    }],
    "properties_to_keep_when_chaining": ["lieu","habitat","conductivité","piege_type","date_pose"],
    "batch_visit_display_list": ["name","piege_type"],
    "specific": {
        "habitat": {
            "type_widget": "text",
            "attribut_label": "Habitat",
            "required": false
        },
        "conductivité": {
            "type_widget": "text",
            "attribut_label": "Conductivité",
            "required": false
        },
        "piege_type": {
            "type_widget": "select",
            "attribut_label": "Type de Piège",
            "required": true,
            "values": ["Verveux simple","Verveux double","Nasse","Cage-piège","Épuisette","Capture manuelle"]
        },
        "date_pose": {
            "type_widget": "date",
            "attribut_label": "Date de Pose",
            "required": false
        },
        "date_retrait": {
            "type_widget": "date",
            "attribut_label": "Date de Retrait",
            "required": false
        }
    }
}